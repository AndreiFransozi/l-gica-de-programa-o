#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <locale.h>
//Fun��o principal do programa
int valor = 0;
int valor2 = 0;
int opcao = 0;
int main(){

    printf ("Digite uma opcao de 1 a 7 :  ");
    scanf("%d", &opcao);
    printf ("Digite um valor: ");
    scanf("%d", &valor);
    printf ("Digite o valor2: ");
    scanf("%d", &valor2);
    if (opcao == 1)
        printf("\n A soma de %d e %d = %d",valor , valor2, valor + valor2);
    else
    if (opcao == 2)
        printf("\n A subtracao de %d e %d = %d",valor , valor2, valor - valor2);
    else
    if (opcao == 3)
        //Divis�o
        printf("\n A divisao de %d e %d = %d",valor , valor2, valor / valor2);
    else
    if (opcao == 4)
        printf("\n O resto da divisao entre %d e %d = %d\n",valor , valor2, valor % valor2);
    else
    if (opcao == 5)
        printf("\n A multiplicacao de %d e %d = %d\n",valor , valor2, valor * valor2 );
    else
    if (opcao == 6)
        printf(" O valor absoluto de -3 = %d\n", abs(-3));
    else
        if (opcao == 7)
            printf("/n O valor absoluto de -3 = %d\n", abs(-3));
        else
            printf ("Valor invalido!\n");
    getch();
    return 0;
}
